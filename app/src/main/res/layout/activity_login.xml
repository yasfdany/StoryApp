<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLoginPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginBottom="32dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_login_illustration"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"/>

                <TextView
                    android:text="@string/login_now"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/please_enter_the_details_below"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"/>

                <dev.studiocloud.storyapp.ui.components.TextField
                    android:id="@+id/tfEmail"
                    android:layout_marginHorizontal="24dp"
                    android:hint="@string/input_email"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <dev.studiocloud.storyapp.ui.components.TextField
                    android:id="@+id/tfPassword"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="12dp"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <dev.studiocloud.storyapp.ui.components.PrimaryButton
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:id="@+id/pbLogin"
                    android:text="@string/login"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <dev.studiocloud.storyapp.ui.components.SecondaryButton
                    android:text="@string/register"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>